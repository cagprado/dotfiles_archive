#!/bin/zsh

if [[ "$1" = "-H" ]]; then
    print -P -f "%${LIST_WIDTH}s  %s\n" "%B$0%b" "Transmission client wrapper for mredson server."
    return
fi

if [[ "$HOSTNAME" = "mredson" ]]; then
    transmission-remote localhost:9091 -n $(pass transmission/login):$(pass transmission/cagprado) "$@"
else
    echo "Host mredson still donâ€™t have a home..."
fi
