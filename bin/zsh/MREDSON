#!/bin/zsh

autoload +X athome

local DESC="Returns mredson address depending on physical location."
local USAGE="%Busage:%b $0"

if [[ "$1" = "-h" ]]; then
  print -P "$USAGE\n$DESC"
  return
elif [[ "$1" = "-H" ]]; then
  print -P -f "%${LIST_WIDTH}s  %s\n" "%B$0%b" "$DESC"
  return
fi

athome && echo "192.168.0.100" || echo "$MREDSON_ADDR"
