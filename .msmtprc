# vim: ft=config
defaults
port 587
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile ~/.msmtp.log

# yandex
account yandex
host smtp.yandex.com
from cagprado@yandex.com
user cagprado@yandex.com
passwordeval pass yandex/password

# CCNU
account ccnu
# use hwsmtp if overseas
host smtp.exmail.qq.com
#host hwsmtp.exmail.qq.com
from cagprado@mail.ccnu.edu.cn
user cagprado@mail.ccnu.edu.cn
passwordeval pass ccnu/password

# IFUSP
account ifusp
host smtp.if.usp.br
from cagprado@if.usp.br
user caioagp
passwordeval pass ifusp/password
tls_trust_file ~/etc/certificates/CCIFUSP-CA.crt
