# vim: ft=msmtp
defaults
port 587
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile ~/.msmtp.log

# GMAIL
account gmail
host smtp.gmail.com
from cagprado@gmail.com
user cagprado@gmail.com
passwordeval pass google/cagprado

account gmailmonitoria :gmail
from cagprado+monitoria@gmail.com

# IFUSP
account ifusp
host smtp.if.usp.br
from cagprado@if.usp.br
user caioagp
passwordeval pass usp/ifusp
tls_trust_file ~/etc/CCIFUSP-CA.crt
