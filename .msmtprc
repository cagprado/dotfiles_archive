# vim: ft=msmtp
defaults
port 587
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile ~/.msmtp.log

# IFUSP
account ifusp
host smtp.if.usp.br
from cagprado@if.usp.br
user caioagp
passwordeval pass ifusp/password
tls_trust_file ~/etc/certificates/CCIFUSP-CA.crt

# QQMail
account qqmail
host smtp.qq.com
from cagprado@qq.com
user cagprado
passwordeval pass qq/authorization

# GMAIL
account gmail
host smtp.gmail.com
from cagprado@gmail.com
user cagprado@gmail.com
passwordeval pass google/password

account gmailmonitoria :gmail
from cagprado+monitoria@gmail.com
