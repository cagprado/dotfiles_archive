[global]
    body =          '',
    prompt =        'standout',
    footer =        '','', 'standout,brown'
    notify_error =  '','', 'standout,dark red'
    notify_normal = '','', 'standout,dark green'
    tag =           '','', 'dark blue'
    tag_focus =     '','', 'dark cyan'

[help]
    title = 'standout',
    text = 'standout',
    section = '','', 'black'

[bufferlist]
    line_focus = 'standout',
    line_even = '',
    line_odd = '',

[taglist]
    line_focus = 'standout',
    line_even = '',
    line_odd = '',

[envelope]
    body = '',
    header =        '','', 'bold', 'dark cyan'
    header_key =    '','', 'light gray', 'dark cyan'
    header_value =  '','', 'bold', 'dark cyan'

[thread]
    body = '',
    body_focus =       '','', 'standout','', 'light gray','white'
    header =           '','', 'bold', 'dark cyan'
    header_key =       '','', 'light gray', 'dark cyan'
    header_value =     '','', 'bold', 'dark cyan'
    arrow_heads =      'bold',
    arrow_bars =       'bold',
    attachment =       '','', 'standout', 'dark cyan'
    attachment_focus = 'standout',

    [[summary]]
        focus = '','', 'light gray', 'brown'
        even =  '','', 'light gray', 'dark blue'
        odd =   '','', 'light gray', 'dark blue'

[search]
    [[threadline]]
        normal = '',
        focus =  'standout',
        parts = date,mailcount,authors,subject,tags
        [[[date]]]
            normal = '','', 'standout,dark cyan'
            focus  = '','', 'standout,dark cyan'
            width = 'fit',10,10
            alignment = right
        [[[mailcount]]]
            normal = '','', '', '', 'white'
            focus  = '','', 'standout,bold', 'black', 'standout', 'white'
            width = 'fit',4,4
            alignment = right
        [[[authors]]]
            normal = '','', 'dark magenta'
            focus =  '','', 'standout', '', 'standout,bold'
            width = 'fit',30,30
        [[[subject]]]
            normal = '','', 'white'
            focus =  '','', 'standout'
            width = 'weight', 1
        [[[tags]]]
            normal = '','', 'dark blue'
            focus =  '','', 'standout', 'brown'

    [[threadline-flagged+unread]]
        tagged_with = 'flagged','unread'
        [[[date]]]
            normal = '','', 'standout,dark red'
            focus  = '','', 'standout,dark red'
        [[[mailcount]]]
            normal = '','', 'bold'
            focus  = '','', 'standout', '', 'standout,bold', 'light gray'

    [[threadline-flagged]]
        tagged_with = 'flagged'
        [[[date]]]
            normal = '','', 'standout,dark red'
            focus  = '','', 'standout,dark red'

    [[threadline-unread]]
        tagged_with = 'unread'
        [[[mailcount]]]
            normal = '','', 'bold'
            focus  = '','', 'standout', '', 'standout,bold', 'light gray'
