# KEY BINDINGS ##############################################################
[bindings]
    k = move up
    j = move down
    up = move up
    down = move down
    ctrl u = move halfpage up
    ctrl d = move halfpage down
    page up = move page up
    page down = move page down
    home = move first
    g g = move first
    end = move last
    G = move last
    tab = bnext
    ' ' = move page down
    / = prompt 'search '
    o =
    1 = search is:inbox OR is:flagged
    2 = search is:unread
    3 = search is:flagged
    4 = search is:yandex (is:inbox OR is:flagged)
    5 = search is:ccnu (is:inbox OR is:flagged)
    0 = search is:sent
    ( = search is:junk
    ) = search is:delete
    '=' = bufferlist
    ';' =
    q = exit
    : = prompt
    . = repeat
    f1 = help bindings
    ? =
    f2 = flush
    $ =
    f5 = refresh
    @ =
    \ = taglist
    # =
    backspace = bclose
    d =
    c = compose
    m =

    [[bufferlist]]
        d = close
        x =
        enter = open

    [[taglist]]
        enter = select

    [[search]]
        | = refineprompt
        enter = select
        delete = tag delete; untag inbox,unread,flagged
        d = tag delete; untag inbox,unread,flagged
        a = untag inbox,unread
        A = untag inbox,unread,flagged
        r = toggletags unread; move down
        R = toggletags unread
        s =
        f = toggletags flagged; move down
        F = toggletags flagged
        ! =
        t = prompt 'tag '
        T = retagprompt
        u = prompt 'untag '
        U =
        & =
        l = ''
        O =

    [[envelope]]
        a = prompt 'attach ~/'
        e = edit
        enter = send
        y =
        w = save
        P =
        f = prompt 'set From '
        s = refine Subject
        t = refine To
        T = refine Cc
        b = refine Bcc
        c =
        x = togglesign
        X = toggleencrypt
        S =
        g f =

    [[thread]]
        enter = select
        u = unfold is:unread; fold not is:unread
        C = fold *
        c = fold *
        E = unfold *
        e = unfold *
        < = fold
        > = unfold
        h = toggleheaders
        H = togglesource
        g f =
        S = save
        s = save --all
        t = reply
        T = reply --spawn True
        r = reply --all
        R = reply --all --spawn True
        f = forward
        F = forward --spawn True
        g =
        p = print --add_tags
        P = print --all --separately --add_tags
        | = prompt 'pipeto '
        n =
        b =
        J = move next
        K = move previous
        ' ' = move page down
        'g j' = move next sibling
        'g k' = move previous sibling
        'g h' = move parent
        'g l' = move first reply
